extends layout  

block links
  link(rel='stylesheet', href='/css/profile.css')

block scripts
  script(src="/js/profileUI.js")
  script(src='/js/search.js')
  script(src="/js/github.js")
  script(src="/js/sha1.js")
  script(src="/js/oauth.js")

block content
  script.
    var init = function() {
    var card = document.getElementById('card');
  
    document.getElementById('flip').addEventListener( 'click', function(){
      card.toggleClassName('flipped');
      }, false);
    };
    window.addEventListener('DOMContentLoaded', init, false);
  div.content
    nav.navbar.navbar-default
      div.container
        div.navbar-header
          a.navbar-brand(href="#") Endorser
        ul.nav.navbar-nav.navbar-right
          li 
            a(href="register") Register
          li 
            a(href="login") Login
          li 
            a#logout(href="login") Logout
    div.app(ng-app='search-module', ng-controller='searchCTRL')
      div.namebar
        div.namebar.namebar-container
          img.profleicon(src='{{userStats.profile_pic}}', height='100')
          span.name
            {{userStats.first_name}} {{userStats.last_name}}
          div.connectbuttons
            button#github-button Connect with Github
        div.clear
      div.content
        div.search-module
          div.searchpanel
            label.narrowdown Narrow Down
              input(type='text', ng-model='q')
          div.searchcontent
            ul.achievementlist(ng-repeat="source in achievements | filter:q")
              li.hexagon.achievement(ng-repeat="achieve in source | filter:q", ng-if="achieve.name!=NULL")
                {{achieve.name}}
                br
                {{achieve.subtext}}
                br
                {{achieve.source}}
          div.clear

